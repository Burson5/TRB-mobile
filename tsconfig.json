{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dlls",
    "node_modules",
    "dist",
  ]
}
